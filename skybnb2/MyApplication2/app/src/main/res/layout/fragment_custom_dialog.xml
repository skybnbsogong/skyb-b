<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".CustomDialog">

    <LinearLayout
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:background="@drawable/dialog_text_background"
            android:layout_width="match_parent"
            android:text="날짜 선택"
            android:textSize="23dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:fontFamily="@font/applefont"
            android:layout_height="40dp" />
        <com.savvi.rangedatepicker.CalendarPickerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            app:tsquare_dividerColor="@color/calendar_bg"
            app:tsquare_headerTextColor="@color/color_red"
            />
        <LinearLayout
            android:padding="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pay_account_stat_change_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/applefont"
                    android:gravity="center"
                    android:text="선택"
                    android:textColor="#444"
                    android:textSize="21dp" />
                <TextView
                    android:id="@+id/pay_account_stat_cancel_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/applefont"
                    android:gravity="center"
                    android:text="취소"
                    android:textColor="#444"
                    android:textSize="21dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

